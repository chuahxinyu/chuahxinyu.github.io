---
type Props = {
  url: string;
  title: string;
};

const { url, title } = Astro.props;

// example url: https://codepen.io/astrocoders/pen/GRJZQYR
const splitUrl = url.split("/");
const user = splitUrl[3];
const hash = splitUrl[5];
---

<p
  class="codepen"
  data-height="500"
  data-default-tab="result"
  data-slug-hash={hash}
  data-user={user}
  style="height: 500px; box-sizing: border-box; display: flex; align-items: center; justify-content: center; border: 2px solid; margin: 1em 0; padding: 1em;"
>
  <span><a href={url}>{title}</a></span>
</p>

<iframe
  src="https://codesandbox.io/embed/github/HackMelbourne/todo-list-workshop/tree/main/?fontsize=14&hidenavigation=1&theme=dark"
  style="width:100%; height:500px; border:0; border-radius: 4px; overflow:hidden;"
  title="todo-list-workshop"
  allow="accelerometer; ambient-light-sensor; camera; encrypted-media; geolocation; gyroscope; hid; microphone; midi; payment; usb; vr; xr-spatial-tracking"
  sandbox="allow-forms allow-modals allow-popups allow-presentation allow-same-origin allow-scripts"
></iframe>

<script async defer src="https://cpwebassets.codepen.io/assets/embed/ei.js"
></script>
